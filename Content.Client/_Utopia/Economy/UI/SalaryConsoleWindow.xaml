<DefaultWindow xmlns="https://spacestation14.io"
               xmlns:controls="clr-namespace:Content.Client.UserInterface.Controls"
               Title="{Loc 'salary-console-window-title'}"
               SetSize="600 500"
               MinSize="600 400"
               Resizable="True">
    <BoxContainer Orientation="Vertical" HorizontalExpand="True" VerticalExpand="True">

        <BoxContainer Orientation="Vertical" Margin="5">
            <Label Name="StatusLabel" HorizontalAlignment="Center"/>
            <Label Name="BalanceLabel" HorizontalAlignment="Center" Visible="False"/>
        </BoxContainer>

        <controls:HighDivider Name="Divider" Visible="False"/>

        <ScrollContainer Name="EmployeesScrollContainer" VerticalExpand="True" Visible="False" Margin="5">
            <BoxContainer Name="EmployeesContainer" Orientation="Vertical" HorizontalExpand="True"/>
        </ScrollContainer>

        <Label Name="NoEmployeesLabel" Text="{Loc 'salary-console-no-employees'}"
               HorizontalAlignment="Center" VerticalAlignment="Center" Visible="False"/>
    </BoxContainer>
</DefaultWindow>
